@model UTM.Keto.Web.Models.CreateTicketViewModel

@{
    ViewBag.Title = "Создать запрос в техподдержку";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="mb-4">Создать запрос в техподдержку</h2>
    
    <div class="row">
        <div class="col-md-12 mb-4">
            <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left me-2"></i> Вернуться к списку
            </a>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Новый запрос</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Subject, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", placeholder = "Укажите тему запроса" })
                            @Html.ValidationMessageFor(m => m.Subject, "", new { @class = "text-danger" })
                        </div>
                        
                        <div class="mb-4">
                            @Html.LabelFor(m => m.Message, new { @class = "form-label" })
                            @Html.TextAreaFor(m => m.Message, new { @class = "form-control", rows = 6, placeholder = "Опишите вашу проблему или вопрос подробно..." })
                            @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                        </div>
                        
                        <div class="alert alert-info mb-4">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Примечание:</strong> Команда поддержки ответит вам в течение 24 часов.
                        </div>
                        
                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-2"></i> Отправить запрос
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
} 